import java.util.Scanner;

public class Array1 {
    static Scanner input = new Scanner(System.in);
    static String[][] students = new String[10][2];  // Array untuk menyimpan NIM dan Nama (maks 10 mahasiswa)
    static int size = 0;  // Jumlah data yang sudah ada

    public static void main(String[] args) {
        int choice;
        do {
            menu();
            System.out.print("SELECT MENU (Pilih menu): ");
            if (input.hasNextInt()) {
                choice = input.nextInt();
                input.nextLine();  
                switch (choice) {
                    case 1 -> insert(0);  // Insert di awal
                    case 2 -> insertAtPos();  // Insert di posisi tertentu
                    case 3 -> insert(size);  // Insert di akhir
                    case 4 -> delete(0);  // Delete di awal
                    case 5 -> deleteAtPos();  // Delete di posisi tertentu
                    case 6 -> delete(size - 1);  // Delete di akhir
                    case 7 -> deleteFirst();  // Delete elemen pertama (first occurrence)
                    case 8 -> showData();  // Tampilkan data
                    case 9 -> System.out.println("PROGRAM COMPLETED (Program selesai).");
                    default -> System.out.println("INVALID MENU! (Menu tidak valid!)");
                }
            } else {
                System.out.println("INVALID MENU! ENTER A NUMBER BETWEEN 1-9 (Input tidak valid! Masukkan angka antara 1-9).");
                input.nextLine();  
                choice = 0;  
            }
        } while (choice != 9);
    }

    static void menu() {
        System.out.println("\n=== STUDENT ARRAY MENU (MENU ARRAY MAHASISWA) ===");
        System.out.println("1. Insert at beginning (Masukkan data di awal)");
        System.out.println("2. Insert at given position (Masukkan data pada posisi yang diinginkan)");
        System.out.println("3. Insert at end (Masukkan data di akhir)");
        System.out.println("4. Delete from beginning (Hapus data dari awal)");
        System.out.println("5. Delete given position (Hapus data pada posisi yang diinginkan)");
        System.out.println("6. Delete from end (Hapus data dari akhir)");
        System.out.println("7. Delete first occurrence (Hapus data yang pertama muncul)");
        System.out.println("8. Show data (Tampilkan data)");
        System.out.println("9. Exit (Kembali)");
    }

    static void insert(int pos) {
        if (size == 10) {
            System.out.println("ARRAY IS FULL! (Array penuh!)");
            return;
        }
        for (int i = size; i > pos; i--) {
            students[i][0] = students[i - 1][0];
            students[i][1] = students[i - 1][1];
        }
        System.out.print("ENTER NIM (Masukkan NIM): ");
        students[pos][0] = input.nextLine();
        System.out.print("ENTER NAME (Masukkan Nama): ");
        students[pos][1] = input.nextLine();
        size++;
    }

    static void insertAtPos() {
        if (size == 10) {
            System.out.println("ARRAY IS FULL! (Array penuh!)");
            return;
        }
        System.out.print("ENTER POSITION (Masukkan posisi) (1-" + (size + 1) + "): ");
        int pos = input.nextInt() - 1;
        input.nextLine();
        if (pos < 0 || pos > size) {
            System.out.println("INVALID POSITION! (Posisi tidak valid!)");
            return;
        }
        insert(pos);
    }

    static void delete(int pos) {
        if (size == 0) {
            System.out.println("EMPTY DATA! (Data kosong!)");
            return;
        }
        for (int i = pos; i < size - 1; i++) {
            students[i][0] = students[i + 1][0];
            students[i][1] = students[i + 1][1];
        }
        size--;
    }

    static void deleteAtPos() {
        if (size == 0) {
            System.out.println("EMPTY DATA! (Data kosong!)");
            return;
        }
        System.out.print("ENTER POSSITION (Masukkan posisi): ");
        int pos = input.nextInt() - 1;
        if (pos < 0 || pos >= size) {
            System.out.println("INVALID POSITION! (Posisi tidak valid!)");
            return;
        }
        delete(pos);
    }

    static void deleteFirst() {  
        if (size == 0) {
            System.out.println("EMPTY DATA! (Data kosong!)");
            return;
        }
        delete(0);
        System.out.println("FIRST ELEMENT SUCCESSFULLY REMOVED (Elemen pertama berhasil dihapus).");
    }

    static void showData() {
        if (size == 0) {
            System.out.println("EMPTY DATA! (Data kosong!)");
            return;
        }
        System.out.println("\n=== STUDENT DATA (DATA MAHASISWA) ===");
        for (int i = 0; i < size; i++) {
            System.out.println((i + 1) + ". NIM: " + students[i][0] + " | Nama: " + students[i][1]);
        }
    }
}
