students = [["", ""] for _ in range(10)]  
size = 0  

def menu():
    print("\n=== STUDENT ARRAY MENU (MENU ARRAY MAHASISWA) ===")
    print("1. Insert at beginning (Masukkan data di awal)")
    print("2. Insert at given position (Masukkan data pada posisi yang diinginkan)")
    print("3. Insert at end (Masukkan data di akhir)")
    print("4. Delete from beginning (Hapus data dari awal)")
    print("5. Delete given position (Hapus data pada posisi yang diinginkan)")
    print("6. Delete from end (Hapus data dari akhir)")
    print("7. Delete first occurrence (Hapus data yang pertama muncul)")
    print("8. Show data (Tampilkan data)")
    print("9. Exit (Kembali)")

def insert(pos):
    global size
    if size == 10:
        print("ARRAY IS FULL! (Array penuh!)")
        return
    for i in range(size, pos, -1):
        students[i] = students[i - 1][:]  
    nim = input("ENTER NIM (Masukkan NIM): ")
    nama = input("ENTER NAME (Masukkan Nama): ")
    students[pos] = [nim, nama]
    size += 1

def insert_at_pos():
    if size == 10:
        print("ARRAY IS FULL! (Array penuh!)")
        return
    try:
        pos = int(input(f"ENTER POSITION (Masukkan posisi) (1-{size + 1}): ")) - 1
        if pos < 0 or pos > size:
            print("INVALID POSITION! (Posisi tidak valid!)")
            return
        insert(pos)
    except ValueError:
        print("POSITION INPUT MUST BE NUMBERS! (Input posisi harus angka!)")

def delete(pos):
    global size
    if size == 0:
        print("EMPTY DATA! (Data kosong!)")
        return
    for i in range(pos, size - 1):
        students[i] = students[i + 1][:]  
    size -= 1

def delete_at_pos():
    if size == 0:
        print("EMPTY DATA! (Data kosong!)")
        return
    try:
        pos = int(input("ENTER POSITION (Masukkan posisi): ")) - 1
        if pos < 0 or pos >= size:
            print("INVALID POSITION! (Posisi tidak valid!)")
            return
        delete(pos)
    except ValueError:
        print("POSITION INPUT MUST BE NUMBERS! (Input posisi harus angka!)")

def delete_first():
    if size == 0:
        print("EMPTY DATA! (Data kosong!)")
        return
    delete(0)
    print("FIRST ELEMENT SUCCESSFULLY REMOVED (Elemen pertama berhasil dihapus).")

def show_data():
    if size == 0:
        print("EMPTY DATA! (Data kosong!)")
        return
    print("\n=== STUDENT DATA (DATA MAHASISWA) ===")
    for i in range(size):
        print(f"{i + 1}. NIM: {students[i][0]} | Nama: {students[i][1]}")

while True:
    menu()
    choice_input = input("SELECT MENU (Pilih menu): ")
    try:
        choice = int(choice_input)
        if choice == 1:
            insert(0)
        elif choice == 2:
            insert_at_pos()
        elif choice == 3:
            insert(size)
        elif choice == 4:
            delete(0)
        elif choice == 5:
            delete_at_pos()
        elif choice == 6:
            delete(size - 1)
        elif choice == 7:
            delete_first()
        elif choice == 8:
            show_data()
        elif choice == 9:
            print("PROGRAM COMPLETED (Program selesai).")
            break
        else:
            print("INVALID MENU! (Menu tidak valid!)")
    except ValueError:
        print("INVALID MENU! ENTER A NUMBER BETWEEN 1-9 (Input tidak valid! Masukkan angka antara 1-9).")
